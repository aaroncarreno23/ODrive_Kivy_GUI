<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

#https://rgbcolorpicker.com/0-1 - for RGB COLORS 0-1
    DPEAButton:
        id: rotate_button
        text: "1 Rotation"
        font_size: 20
        size_hint: None, None
        size: 200, 100
        center_x: root.width * 0.5
        y: root.height * 0.7
        color: 0.97, 0.51, 0.97, 1
        on_press: root.five_rotations()

    DPEAButton:
        id: rotation_direction
        text: "ClockWise"
        font_size: 20
        size_hint: None, None
        size: 200, 100
        center_x: root.width * 0.5
        y: root.height * 0.3
        color: 0.96, 0.77, 0.43, 1
        on_press: root.change_direction()


    DPEAButton:
        id: settings_button
        text: 'Settings'
        font_size: 20
        size_hint: None, None
        size: 150, 100
        center_x: root.width * 0.91
        y: root.height * 0.87
        color: 0.7, 0.75, 0.78, 1
        on_press: root.switch_to_settings()

    DPEAButton:
        text: 'Home'
        font_size: 20
        size_hint: None, None
        size: 150, 50
        center_x: root.width*0.5
        center_y: root.height*0.6
        color: 0.67, 0.95, 0.54, 1
        on_press: root.endstop()

    DPEAButton:
        id: admin
        text: 'Admin Screen'
        font_size: 20
        size_hint: None, None
        size: 150, 100
        center_x: root.width * 0.91
        y: root.height * 0.7
        color: 0, 0, 0, 1
        on_press: root.switch_to_admin()













